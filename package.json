{
  "name": "template-v3.0",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "test": "pnpm test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:regression": "vitest run tests/regression",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "fix:bug": "echo '🔴 バグ修正モード: 必ず再現テストを先に書く' && pnpm test:regression --watch",
    "setup": "node scripts/setup.js",
    "setup:project": "node scripts/setup.js --full",
    "setup:quick": "node scripts/setup.js --quick",
    "setup:sc": "node scripts/setup.js --sc",
    "check": "node scripts/check.js",
    "check:all": "node scripts/check.js",
    "validate": "node scripts/validate-sc.js --full",
    "validate:quick": "node scripts/validate-sc.js --quick",
    "validate:deploy": "node scripts/validate-sc.js --deploy",
    "check:boundaries": "node scripts/check-boundaries.js",
    "check:features": "node scripts/check-boundaries.js --verbose",
    "create:feature": "node scripts/create-feature.js",
    "validate:all": "pnpm validate",
    "test:real-connection": "node scripts/test-real-connection.js",
    "dev:supabase-check": "node scripts/dev-supabase-check.js",
    "dev:safe": "pnpm check:boundaries && next dev",
    "build:safe": "pnpm check:boundaries && next build",
    "fix:boundaries": "node scripts/check-boundaries.js --fix",
    "preflight": "node scripts/preflight.js",
    "commit:feature": "node scripts/commit-by-feature.js",
    "git:check": "git diff --cached --name-only | grep '^src/features/' | cut -d'/' -f3 | sort -u",
    "predeploy": "node scripts/preflight.js",
    "analyze": "ANALYZE=true next build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --ignore-path .eslintignore",
    "typecheck": "tsc --noEmit",
    "claude:start": "git status && pnpm check:boundaries",
    "claude:implement": "pnpm create:feature",
    "claude:validate": "pnpm check:boundaries && pnpm typecheck && pnpm test",
    "claude:complete": "pnpm validate",
    "sc:start": "node scripts/git-safety-check.js --command=sc:start && git status && pnpm check:boundaries",
    "sc:feature": "node scripts/git-safety-check.js --auto-fix --command=sc:feature && pnpm create:feature",
    "sc:boundaries": "pnpm check:boundaries",
    "sc:analyze": "pnpm check:features",
    "sc:test": "pnpm test",
    "sc:refactor": "node scripts/git-safety-check.js --auto-fix --command=sc:refactor && pnpm fix:boundaries",
    "sc:validate": "pnpm validate",
    "sc:plan": "node scripts/git-safety-check.js --command=sc:plan && echo 'Planning session initiated'",
    "sc:brainstorm": "node scripts/git-safety-check.js --auto-fix --command=sc:brainstorm && echo 'Brainstorming mode activated - safe branch created'",
    "sc:implement": "pnpm claude:implement",
    "sc:review": "pnpm typecheck && pnpm lint",
    "sc:optimize": "pnpm analyze",
    "sc:debug": "pnpm test:unit:ui",
    "sc:business-panel": "echo 'Business analysis mode activated'",
    "sc:parallel": "node scripts/setup.js --sc-parallel",
    "sc:mcp": "echo 'MCP-First mode: Context7, Sequential, Morphllm, Serena, Playwright'",
    "prepare": "husky install",
    "postinstall": "chmod +x .husky/* 2>/dev/null || true",
    "quality:check": "pnpm lint && pnpm typecheck && pnpm check:boundaries",
    "quality:fix": "pnpm lint --fix && pnpm fix:boundaries",
    "quality:95": "echo '🎯 95%品質モード (標準推奨)'",
    "quality:97": "cp .eslintrc-optimal.json .eslintrc.json && cp tsconfig-optimal.json tsconfig.json",
    "quality:98": "cp .eslintrc-extreme.json .eslintrc.json && cp tsconfig-extreme.json tsconfig.json",
    "quality:restore": "git checkout -- .eslintrc.json tsconfig.json",
    "claude:quality:optimal": "echo '🤖 Claude Code最適品質モード (97%)' && pnpm quality:97 && pnpm validate",
    "claude:quality:extreme": "echo '🤖 Claude Code極限品質モード（実験用）' && pnpm quality:98 && pnpm validate || pnpm quality:restore"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "i18next": "^25.5.2",
    "next": "14.2.31",
    "next-i18next": "^15.4.2",
    "react": "^18",
    "react-dom": "^18",
    "react-i18next": "^16.0.0",
    "zustand": "^4.5.0"
  },
  "packageManager": "pnpm@8.15.9",
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.32",
    "@playwright/test": "^1.48.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "2.1.9",
    "autoprefixer": "^10.4.19",
    "eslint": "^8",
    "eslint-config-next": "14.2.31",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.25.1",
    "husky": "^8.0.3",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.0",
    "playwright": "^1.48.0",
    "postcss": "^8.4.38",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.3",
    "typescript": "^5",
    "vite": "^5.4.20",
    "vitest": "^2.1.9"
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "next@<14.2.32": ">=14.2.32"
    }
  }
}
